use chrono::{NaiveDate, Duration};

fn main() {
    // Define the two dates
    let date1 = NaiveDate::parse_from_str("2024-01-01", "%Y-%m-%d").expect("Failed to parse date");
    let date2 = NaiveDate::parse_from_str("2024-08-13", "%Y-%m-%d").expect("Failed to parse date");

    // Calculate the difference between the two dates
    let duration = date2.signed_duration_since(date1);
    
    // Get the number of days
    let days_between = duration.num_days();

    println!("Number of days between {} and {}: {}", date1, date2, days_between);
}
